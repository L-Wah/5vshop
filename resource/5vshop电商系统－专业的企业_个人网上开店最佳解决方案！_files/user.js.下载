//清空购物车
function delCartall(){
	layer.msg('确定要清空购物车吗?', {
		time: 0
		,btn: ['确定', '取消']
		,yes: function(index){
			layer.close(index);
			$.ajax({
				type:"GET",
				url:"ajax.asp?action=delCartall",
				cache: false,
				dataType:"html",
				beforeSend:function(XMLHttpRequest){
					layer.load();
				},
				error: function(request) {
					layer.closeAll();
					layer.msg("连接失败，请重试!");
				},
				success:function(date){
					layer.closeAll();
					if(date==1) {
						location.reload();
					}
				}
			});
		}
	});
}